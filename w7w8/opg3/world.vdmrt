    public Scenario4: () ==> bool
    Scenario4() == (
        -- underdamped oscillation scenario
        echoInit();
        echoState(0);
        for i = 0 to 7 do ( 
            MySystem`arm_controller.setMotorState(<ON>);
            MySystem`arm_env.step(14 - i*2);
            MySystem`arm_controller.setMotorDirection(<DOWN>);
            echoState(i*2);
            MySystem`arm_controller.get_env_angle();
        );
        return true;
    );

    public Scenario6: () ==> bool
    Scenario6() == (
    echoInit();

    -- 
    for i = 0 to 7 do ( 
        echoState(i);
        MySystem`arm_controller.get_env_angle();
        MySystem`arm_controller.moveToTarget();
        MySystem`arm_env.step(1);
        );

    return true;
    );

    public Scenario7: () ==> bool
    Scenario7() == (
    echoInit();

    
    -- 
    for i = 0 to 10 do ( 
        echoState(i);
        MySystem`arm_controller.get_env_angle();
        MySystem`arm_controller.moveToTarget();
        MySystem`arm_env.step(9-i);
        );

    return true;
    );


    public RunScenario1 : () ==> (seq of (real * real * nat * real ))
    RunScenario1() == {
        MySystem`arm_env.setFinalSimulationTime(10);
        start(MySystem`arm_env);
        MySystem`arm_env.isFinished();
        return MySystem`env.data_history;
    };

end World